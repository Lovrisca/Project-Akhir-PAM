<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:background="#90DEFC">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-40dp"
            android:src="@drawable/gambar2" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/rectangle_5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xx@xx.xx"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member Since"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/email1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/member1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xx xx xx"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toTopOf="@+id/member"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uploaded Article"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/member1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/article1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xx"
        android:textAlignment="center"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="18dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toTopOf="@+id/article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Log Out"
        android:textColor="@color/white"
        android:background="@drawable/buttonlg"

        app:layout_constraintTop_toTopOf="@+id/article1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_navbar"
        android:gravity="center"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:background="@drawable/ic_home"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_create"
            android:layout_gravity="center"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_person"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:elevation="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>